{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

{% block body %}
    <h1>Task index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Status</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.title }}</td>
                <td>{{ task.description }}</td>
                <td>{{ task.status }}</td>
                {# <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>{{ task.createdAt ? task.createdAt|date('d F Y') : '' }}</td>

                <td>
                    <a href="{{ path('app_task_show', {'id': task.id}) }}">Voir</a>
                    <a href="{{ path('app_task_edit', {'id': task.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_task_new') }}">Cr√©er un nouveau Task</a>
{% endblock %}

